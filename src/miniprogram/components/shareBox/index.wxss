.share-wrap {
  width: 100%;
}

.share-container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.close {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
}


.share-image {
  width: 630rpx;
  margin: 66rpx auto 0;
  display: block;
}


.save-btn {
  width: 336rpx;
  height: 96rpx;
  background: url('https://qiniu-image.qtshe.com/20190506save-btn.png') center center;
  background-size: 100% 100%;
  position: absolute;
  left: 50%;
  margin-left: -168rpx;
  margin-top: 50rpx;
}
